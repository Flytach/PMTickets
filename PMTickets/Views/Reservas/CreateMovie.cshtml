
@model PMTickets.Models.searchModel
@{
    ViewBag.Title = "CreateMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>createMovie</title>
    <script type="text/javascript" src="~/Script/jquery-1.11.0.min.js"></script>
    <script src="~/Script/jquery-ui.min.js" type="text/javascript"></script>
    <link href="~/Script/jquery-ui.min.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="~/Script/jsSelect.js"></script>
    <style type="text/css">
        .txta01 {
            border: 1px solid #b3b3b3;
            width: 200px;
            color: #333333;
            padding: 3px;
            margin-right: 4px;
            margin-bottom: 8px;
            font-size: 14px;
            font-family: arial, sans-serif;
        }

        label {
            font-size: 16px;
        }

        .checkout-button {
            display: inline;
            width: 80px;
            height: 30px;
            line-height: 26px;
            margin: 10px auto;
            border: 1px solid #3f5367;
            font-size: 12px;
            color: #fff;
            cursor: pointer;
            background-color: #34495e;
            border-radius: 3px;
        }
    </style>
    <script>
        $(function () {
            $("#txtShowDate").datepicker();
        });


    </script>
</head>
<body>
    <div>
        @Html.Hidden("AppUrl", Url.Content("~"))
        @Html.ActionLink("Back...", "index", "home")
        @using (Html.BeginForm())
        {
            @Html.Label("SelectMovie", "Enter Movie Name : ", new { id = "lblSelectMovie" })
            @Html.TextBox("ddlmoviename", null, new { id = "ddlmoviename", @class = "txta01" })
            @Html.Label("SelectDate", "Select Date : ", new { id = "lblSelectDate" })
            @Html.TextBoxFor(x => x.movieDate, new { id = "txtShowDate", @class = "txta01" })
            @Html.Label("Selecttime", "Select Time : ", new { id = "lblSelectTime" })
            @Html.DropDownListFor(x => x.movieTimeID, Model.movieTimingsList, new { id = "ddlMovieTimings", @class = "txta01", onchange = "searchClick()" })
            <button type="button" onclick="CreateClick()" class="checkout-button">Create</button>
        }
    </div>
</body>
</html>
